<%= form_for(@book) do |f| %>
    <%= f.label :title, 'Title' %>
    <%= f.text_field :title %>

    <%= f.label :author, 'Author' %>
    <%= f.text_field :author %>

    <%= f.label :state, 'Estado' %>
    <%= f.select :state, @states %>

    <%= f.label :borrowed_at, 'Borrowed at' %>
    <%= f.select_datetime :borrowed_at %>

    <%= f.label :returned_at, 'Returned at' %>
    <%= f.select_datetime :returned_at %>

    <%= f.submit %>
<% end %>