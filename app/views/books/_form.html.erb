<%= form_for(@book) do |f| %>
    <%= f.label :title, 'Title' %>
    <%= f.text_field :title %>

    <%= f.label :author, 'Author' %>
    <%= f.text_field :author %>

    <%= f.label :status, 'Estado' %>
    <%= f.select :status, @statuses %>

    <%= f.label :borrowed_at, 'Borrowed at' %>
    <%= f.datetime_select :borrowed_at %>

    <%= f.label :returned_at, 'Returned at' %>
    <%= f.datetime_select :returned_at %>

    <%= f.submit %>
<% end %>